<h1>Register New User Admin</h1>

<%= form_for ['admin', @admin] do |f| %>
  <% if @admin.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @admin.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  
  <%= f.fields_for :info do |info| %>
    <p>
      <%= info.label :location %><br />
      <%= info.text_field :location  %>
    </p>
    
  <% end %>
  
  <p class="button"><%= f.submit %></p>
<% end %>